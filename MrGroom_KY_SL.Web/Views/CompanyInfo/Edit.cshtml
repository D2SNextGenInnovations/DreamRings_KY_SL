@model MrGroom_KY_SL.Models.CompanyInfo

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Edit Company Information";
}

<div class="company-edit-wrapper py-5">
    <div class="company-edit-card p-5 shadow-lg">
        <div class="text-center mb-5">
            <h2 class="fw-bold text-gradient">
                <i class="bi bi-pencil-square me-2"></i> Edit Company Information
            </h2>
            <p class="text-muted">Update your company's identity and contact information</p>
        </div>

        @using (Html.BeginForm("Edit", "CompanyInfo", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.CompanyInfoId)

            <!-- Company Name -->
            <div class="form-group mb-4">
                <label class="form-label fw-semibold">Company Name</label>
                <div class="input-group">
                    <span class="input-group-text icon-gradient">
                        <i class="bi bi-building"></i>
                    </span>
                    @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control", placeholder = "Enter company name" })
                </div>
                @Html.ValidationMessageFor(m => m.CompanyName, "", new { @class = "text-danger small" })
            </div>

            <!-- Address -->
            <div class="form-group mb-4">
                <label class="form-label fw-semibold">Address</label>
                <div class="input-group">
                    <span class="input-group-text icon-gradient">
                        <i class="bi bi-geo-alt"></i>
                    </span>
                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control", placeholder = "Enter address" })
                </div>
            </div>

            <!-- Phone -->
            <div class="form-group mb-4">
                <label class="form-label fw-semibold">Phone</label>
                <div class="input-group">
                    <span class="input-group-text icon-gradient">
                        <i class="bi bi-telephone"></i>
                    </span>
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "Enter primary phone number" })
                </div>
            </div>

            <!-- Secondary Phone -->
            <div class="form-group mb-4">
                <label class="form-label fw-semibold">Secondary Phone</label>
                <div class="input-group">
                    <span class="input-group-text icon-gradient">
                        <i class="bi bi-telephone-plus"></i>
                    </span>
                    @Html.TextBoxFor(m => m.SecondaryPhone, new { @class = "form-control", placeholder = "Enter secondary phone" })
                </div>
            </div>

            <!-- Fax -->
            <div class="form-group mb-4">
                <label class="form-label fw-semibold">Fax</label>
                <div class="input-group">
                    <span class="input-group-text icon-gradient">
                        <i class="bi bi-printer"></i>
                    </span>
                    @Html.TextBoxFor(m => m.Fax, new { @class = "form-control", placeholder = "Enter fax number" })
                </div>
            </div>

            <!-- Website -->
            <div class="form-group mb-4">
                <label class="form-label fw-semibold">Website</label>
                <div class="input-group">
                    <span class="input-group-text icon-gradient">
                        <i class="bi bi-globe"></i>
                    </span>
                    @Html.TextBoxFor(m => m.Web, new { @class = "form-control", placeholder = "Enter website URL" })
                </div>
            </div>

            <!-- Email -->
            <div class="form-group mb-4">
                <label class="form-label fw-semibold">Email</label>
                <div class="input-group">
                    <span class="input-group-text icon-gradient">
                        <i class="bi bi-envelope-at"></i>
                    </span>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter email address" })
                </div>
            </div>

            <!-- Logo Upload -->
            <div class="form-group mb-4">
                <label class="form-label fw-semibold">Company Logo (Optional)</label>
                <div class="input-group">
                    <span class="input-group-text icon-gradient">
                        <i class="bi bi-image"></i>
                    </span>
                    <input type="file" name="logoFile" class="form-control" accept="image/*" />
                </div>

                @if (Model.CompanyLogo != null && Model.CompanyLogo.Length > 0)
                {
                    <div class="mt-3 text-center">
                        <label class="fw-semibold">Current Logo</label><br />
                        <img src="data:image/png;base64,@Convert.ToBase64String(Model.CompanyLogo)"
                             class="img-thumbnail shadow-sm"
                             style="max-height:120px; border-radius:10px;" />
                    </div>
                }
            </div>

            <!-- Buttons -->
            <div class="text-end mt-5 d-flex justify-content-end gap-3">
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-glass px-4" })
                <button type="submit" class="btn btn-glow px-4">
                    <i class="bi bi-save"></i> Save Changes
                </button>
            </div>
        }
    </div>
</div>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        /* Background */
        body {
            background: linear-gradient(120deg, #e0e7ff, #f5f3ff, #f0f9ff);
            background-size: 300% 300%;
            animation: bgShift 12s ease infinite;
            font-family: 'Poppins', 'Segoe UI', sans-serif;
        }

        @@keyframes bgShift {
            0% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0% 50%;
            }
        }

        /* Wrapper */
        .company-edit-wrapper {
            display: flex;
            justify-content: center;
        }

        /* Card */
        .company-edit-card {
            width: 100%;
            max-width: 750px;
            background: #fff;
            border-radius: 20px;
            position: relative;
            overflow: hidden;
            box-shadow: 0 8px 20px rgba(0,0,0,0.05);
            animation: fadeIn 0.8s ease;
        }

            .company-edit-card::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 6px;
                background: linear-gradient(90deg, #4b6cb7, #43cea2, #4b6cb7);
                animation: gradientFlow 6s linear infinite;
            }

        @@keyframes gradientFlow {
            0%, 100% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(15px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .text-gradient {
            background: linear-gradient(90deg, #185a9d, #43cea2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        /* Form Controls */
        .input-group-text {
            background: #f8fafc;
            border: 1.5px solid #e2e8f0;
            border-radius: 10px 0 0 10px;
        }

        .icon-gradient i {
            background: linear-gradient(90deg, #43cea2, #185a9d);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .form-control {
            background: #f8fafc;
            border: 1.5px solid #e2e8f0;
            border-radius: 0 10px 10px 0;
            transition: 0.3s;
        }

            .form-control:focus {
                border-color: #4b6cb7;
                box-shadow: 0 0 0 3px rgba(75,108,183,0.25);
            }

        /* Buttons */
        .btn-glass {
            background: rgba(255,255,255,0.3);
            backdrop-filter: blur(10px);
        }

        .btn-glow {
            background: linear-gradient(90deg, #43cea2, #185a9d);
            color: #fff;
            box-shadow: 0 4px 12px rgba(24,90,157,0.3);
        }

            .btn-glow:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(24,90,157,0.4);
            }
    </style>
}
