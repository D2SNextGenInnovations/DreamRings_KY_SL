@model MrGroom_KY_SL.Web.Models.CustomerViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Create Customer";
}

<div class="customer-create-wrapper py-5">
    <div class="customer-create-card p-5 shadow-lg">
        <div class="text-center mb-5">
            <h2 class="fw-bold text-gradient">
                <i class="bi bi-person-plus-fill me-2"></i> Create Customer
            </h2>
            <p class="text-muted">Add a new customer with details and address information ✨</p>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <!-- Validation Summary -->
            <div id="validation-summary" class="mb-4">
                @Html.ValidationSummary(false, "", new { @class = "alert alert-danger modern-validation", role = "alert" })
            </div>

            <div class="row">
                <!-- Customer Info -->
                <div class="col-md-6">
                    <h5 class="section-title mb-4"><i class="bi bi-person-lines-fill me-2"></i>Customer Info</h5>

                    <div class="form-group mb-3">
                        <label class="form-label fw-semibold">First Name</label>
                        <div class="input-group">
                            <span class="input-group-text icon-gradient"><i class="bi bi-person"></i></span>
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "Enter first name" })
                        </div>
                        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "modern-error" })
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label fw-semibold">Last Name</label>
                        <div class="input-group">
                            <span class="input-group-text icon-gradient"><i class="bi bi-person-vcard"></i></span>
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Enter last name" })
                        </div>
                        @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "modern-error" })
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label fw-semibold">Email</label>
                        <div class="input-group">
                            <span class="input-group-text icon-gradient"><i class="bi bi-envelope"></i></span>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter email" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "modern-error" })
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label fw-semibold">Phone</label>
                        <div class="input-group">
                            <span class="input-group-text icon-gradient"><i class="bi bi-telephone"></i></span>
                            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "Enter phone number" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "modern-error" })
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label fw-semibold">NIC Number</label>
                        <div class="input-group">
                            <span class="input-group-text icon-gradient"><i class="bi bi-credit-card-2-front"></i></span>
                            @Html.TextBoxFor(m => m.NICNumber, new { @class = "form-control", placeholder = "Enter NIC" })
                        </div>
                        @Html.ValidationMessageFor(m => m.NICNumber, "", new { @class = "modern-error" })
                    </div>
                </div>

                <!-- Address Info -->
                <div class="col-md-6">
                    <h5 class="section-title mb-4"><i class="bi bi-geo-alt-fill me-2"></i>Address Info</h5>

                    <div class="form-group mb-3">
                        <label class="form-label fw-semibold">Address Line 1</label>
                        <div class="input-group">
                            <span class="input-group-text icon-gradient"><i class="bi bi-house"></i></span>
                            @Html.TextBoxFor(m => m.AddressLine1, new { @class = "form-control", placeholder = "Enter address line 1" })
                        </div>
                        @Html.ValidationMessageFor(m => m.AddressLine1, "", new { @class = "modern-error" })
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label fw-semibold">Address Line 2</label>
                        <div class="input-group">
                            <span class="input-group-text icon-gradient"><i class="bi bi-signpost-2"></i></span>
                            @Html.TextBoxFor(m => m.AddressLine2, new { @class = "form-control", placeholder = "Enter address line 2" })
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label fw-semibold">City</label>
                        <div class="input-group">
                            <span class="input-group-text icon-gradient"><i class="bi bi-geo"></i></span>
                            @Html.TextBoxFor(m => m.City, new { @class = "form-control", placeholder = "Enter city" })
                        </div>
                        @Html.ValidationMessageFor(m => m.City, "", new { @class = "modern-error" })
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label fw-semibold">Postal Code</label>
                        <div class="input-group">
                            <span class="input-group-text icon-gradient"><i class="bi bi-mailbox"></i></span>
                            @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control", placeholder = "Enter postal code" })
                        </div>
                        @Html.ValidationMessageFor(m => m.PostalCode, "", new { @class = "modern-error" })
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label fw-semibold">Country</label>
                        <div class="input-group">
                            <span class="input-group-text icon-gradient"><i class="bi bi-globe"></i></span>
                            @Html.TextBoxFor(m => m.Country, new { @class = "form-control", placeholder = "Enter country" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Country, "", new { @class = "modern-error" })
                    </div>
                </div>
            </div>

            <div class="text-end mt-5 d-flex justify-content-end gap-3">
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-glass px-4" })
                <button type="submit" class="btn btn-glow px-4">
                    <i class="bi bi-person-check"></i> Save
                </button>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script>
        $(function () {
            var errors = $(".modern-error").filter(function () {
                return $(this).text().trim().length > 0;
            });

            if (errors.length > 0) {
                toastr.error("Please fix the highlighted errors before submitting.", "Validation Failed ⚠️");
                errors.each(function () {
                    $(this).closest('.form-group').find('.form-control').addClass('is-invalid animated shake');
                });
            }
        });
    </script>
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(120deg, #e0e7ff, #f5f3ff, #f0f9ff);
            background-size: 300% 300%;
            animation: bgShift 12s ease infinite;
            font-family: 'Poppins', 'Segoe UI', sans-serif;
            color: #1e293b;
        }

        @@keyframes bgShift {
            0%, 100% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
        }

        .customer-create-card {
            max-width: 850px;
            border-radius: 20px;
            background: #fff;
            box-shadow: 0 8px 20px rgba(0,0,0,0.05);
        }

        .text-gradient {
            background: linear-gradient(90deg, #185a9d, #43cea2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .btn-glass {
            background: rgba(255,255,255,0.3);
            border: 1.5px solid rgba(255,255,255,0.5);
            color: #334155;
            backdrop-filter: blur(10px);
        }

        .btn-glow {
            background: linear-gradient(90deg, #43cea2, #185a9d);
            color: white;
            transition: 0.3s;
        }

        .modern-error {
            display: block;
            color: #dc3545;
            font-weight: 500;
            margin-top: 4px;
            font-size: 0.85rem;
            animation: fadeInError 0.5s ease;
        }

        @@keyframes fadeInError {
            from { opacity: 0; transform: translateY(-3px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .is-invalid {
            border-color: #dc3545 !important;
            box-shadow: 0 0 5px rgba(220,53,69,0.5);
        }

        .animated.shake {
            animation: shake 0.3s ease;
        }

        @@keyframes shake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-4px); }
            75% { transform: translateX(4px); }
        }

        .modern-validation {
            border-left: 4px solid #dc3545;
            background: #ffe6e6;
            color: #b91c1c;
            border-radius: 8px;
        }
    </style>
}
