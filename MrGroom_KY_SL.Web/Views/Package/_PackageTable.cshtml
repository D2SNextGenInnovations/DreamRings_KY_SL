@model IEnumerable<MrGroom_KY_SL.Models.Package>

@{
    bool isManageMode = Request.QueryString["manage"] == "true";
}

<div class="card border-0 shadow-sm">
    <div class="card-header bg-light d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="fas fa-box-open me-2 text-primary"></i>Package List
        </h5>
        <div class="d-flex gap-2">

            <a href="@Url.Action("ExportExcel", "Package")"
               class="btn btn-sm btn-success"
               data-bs-toggle="tooltip"
               title="Export to Excel">
                <i class="bi bi-file-earmark-spreadsheet"></i>
            </a>

            <a href="@Url.Action("ExportPdf", "Package")"
               class="btn btn-sm btn-danger"
               data-bs-toggle="tooltip"
               title="Export to PDF">
                <i class="bi bi-file-earmark-pdf"></i>
            </a>

            <a href="@Url.Action("DownloadAllSummariesPdf", "Package")"
               class="btn btn-sm btn-dark"
               data-bs-toggle="tooltip"
               title="Download All Package Summaries (PDF)">
                <i class="bi bi-collection"></i>
            </a>

            @if (!isManageMode)
            {
                <a href="@Url.Action("Index", "Package", new { manage = "true" })"
                   class="btn btn-sm btn-outline-primary ajax-page"
                   data-bs-toggle="tooltip"
                   title="Manage Packages">
                    <i class="bi bi-sliders"></i>
                </a>
            }
            else
            {
                <a href="@Url.Action("Index", "Package")"
                   class="btn btn-sm btn-outline-secondary ajax-page"
                   data-bs-toggle="tooltip"
                   title="Back to View">
                    <i class="bi bi-arrow-left-circle"></i>
                </a>
            }
        </div>
    </div>

    <script>
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle simple-table mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Duration (Hrs)</th>
                        <th class="text-end">Base Price (Rs)</th>
                        <th class="text-center">Status</th>
                        <th class="text-center">Preview</th>
                        <th class="text-center">View</th>
                        <th class="text-center">Download</th>
                        @if (isManageMode)
                        {
                            <th class="text-center">Actions</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="@(isManageMode ? 10 : 9)" class="text-center text-muted py-4">No packages found.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var pkg in Model)
                        {
                            <tr>
                                <td>@pkg.Name</td>
                                <td>@pkg.Description</td>
                                <td>@pkg.DurationHours</td>
                                <td class="text-end">@pkg.BasePrice.ToString("N2")</td>
                                <td class="text-center">
                                    @if (pkg.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>

                                <td class="text-center">

                                    <a href="@Url.Action("ViewSummaryImage", "Package", new { id = pkg.PackageId })"
                                       class="btn btn-info btn-sm" target="_blank" title="View Package">
                                        <i class="fa fa-image"></i>
                                    </a>

                                </td>

                                <td class="text-center">
                                    <a href="@Url.Action("Details", "Package", new { id = pkg.PackageId })" class="btn btn-sm btn-outline-info" data-bs-toggle="tooltip" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>

                                <td class="text-center">

                                    <a href="@Url.Action("DownloadSummaryImage", "Package", new { id = pkg.PackageId })"
                                       class="btn btn-success btn-sm" title="Download Package Image">
                                        <i class="fa fa-download"></i>
                                    </a>

                                    <a href="@Url.Action("DownloadSummaryPdf", "Package", new { id = pkg.PackageId })"
                                       class="btn btn-danger btn-sm" title="Download Package PDF">
                                        <i class="bi bi-filetype-pdf"></i>
                                    </a>
                                </td>

                                @if (isManageMode)
                                {
                                    <td class="text-center">
                                        <a href="@Url.Action("Edit", "Package", new { id = pkg.PackageId })" class="btn btn-sm btn-outline-warning me-1" data-bs-toggle="tooltip" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", "Package", new { id = pkg.PackageId })" class="btn btn-sm btn-outline-danger" data-bs-toggle="tooltip" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                }
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        @* Pagination *@
        @if (ViewBag.TotalPages > 1)
        {
            <div class="d-flex justify-content-end mt-3">
                <nav aria-label="Page navigation">
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link ajax-page" href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1, searchTerm = ViewBag.SearchTerm, manage = isManageMode ? "true" : null })">&laquo; Prev</a>
                        </li>
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            string activeClass = i == ViewBag.CurrentPage ? "active" : "";
                            <li class="page-item @activeClass">
                                <a class="page-link ajax-page" href="@Url.Action("Index", new { page = i, searchTerm = ViewBag.SearchTerm, manage = isManageMode ? "true" : null })">@i</a>
                            </li>
                        }
                        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                            <a class="page-link ajax-page" href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1, searchTerm = ViewBag.SearchTerm, manage = isManageMode ? "true" : null })">Next &raquo;</a>
                        </li>
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>
