@model IEnumerable<MrGroom_KY_SL.Models.Staff>

@{
    bool isManageMode = Request.QueryString["manage"] == "true";
}

<div class="card border-0 shadow-sm">
    <div class="card-header bg-light d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-users-cog me-2 text-primary"></i>Staff List</h5>
    </div>

    <div class="card-body">

        <div class="d-flex justify-content-end gap-2 mb-3">
            <a href="@Url.Action("ExportExcel", "Staff")"
               class="btn btn-sm btn-success"
               data-bs-toggle="tooltip"
               title="Export to Excel">
                <i class="bi bi-file-earmark-spreadsheet"></i>
            </a>

            <a href="@Url.Action("ExportPdf", "Staff")"
               class="btn btn-sm btn-danger"
               data-bs-toggle="tooltip"
               title="Export to PDF">
                <i class="bi bi-file-earmark-pdf"></i>
            </a>

            @if (!isManageMode)
            {
                <a href="@Url.Action("Index", "Staff", new { manage = "true" })"
                   class="btn btn-sm btn-outline-primary ajax-page"
                   data-bs-toggle="tooltip"
                   title="Manage Items">
                    <i class="bi bi-sliders"></i>
                </a>
            }
            else
            {
                <a href="@Url.Action("Index", "Staff")"
                   class="btn btn-sm btn-outline-secondary ajax-page"
                   data-bs-toggle="tooltip"
                   title="Back to View">
                    <i class="bi bi-arrow-left-circle"></i>
                </a>
            }
        </div>

        <script>
            // Enable Bootstrap tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            })
        </script>

        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle simple-table mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Role</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th class="text-center">Status</th>
                        <th class="text-center">View</th>
                        @if (isManageMode)
                        {
                            <th class="text-center">Actions</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="@(isManageMode ? 7 : 6)" class="text-center text-muted py-4">No staff members found.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var staff in Model)
                        {
                            <tr>
                                <td>@staff.Name</td>
                                <td>@staff.Role</td>
                                <td>@staff.Phone</td>
                                <td>@staff.Email</td>
                                <td class="text-center">
                                    @if (staff.IsActive ?? false)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a href="@Url.Action("Details", "Staff", new { id = staff.StaffId })"
                                       class="btn btn-sm btn-outline-info"
                                       data-bs-toggle="tooltip" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                                @if (isManageMode)
                                {
                                    <td class="text-center">
                                        <a href="@Url.Action("Edit", "Staff", new { id = staff.StaffId })" class="btn btn-sm btn-outline-warning me-1" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", "Staff", new { id = staff.StaffId })" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </td>
                                }
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- PAGINATION -->
@if (ViewBag.TotalPages > 1)
{
    <div class="d-flex justify-content-end mt-3">
        <nav aria-label="Page navigation">
            <ul class="pagination pagination-sm mb-0">
                <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link ajax-page" href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1, searchTerm = ViewBag.SearchTerm, manage = isManageMode ? "true" : null })">&laquo; Prev</a>
                </li>
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    string activeClass = i == ViewBag.CurrentPage ? "active" : "";
                    <li class="page-item @activeClass">
                        <a class="page-link ajax-page" href="@Url.Action("Index", new { page = i, searchTerm = ViewBag.SearchTerm, manage = isManageMode ? "true" : null })">@i</a>
                    </li>
                }
                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link ajax-page" href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1, searchTerm = ViewBag.SearchTerm, manage = isManageMode ? "true" : null })">Next &raquo;</a>
                </li>
            </ul>
        </nav>
    </div>
}
