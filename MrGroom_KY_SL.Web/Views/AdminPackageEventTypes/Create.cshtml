@model MrGroom_KY_SL.Models.EventType

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Add Event Type";
}

<div class="package-edit-wrapper py-5">
    <div class="package-edit-card p-5 shadow-lg">
        <div class="text-center mb-5">
            <h2 class="fw-bold text-gradient">
                <i class="bi bi-calendar-event me-2"></i> Add Event Type
            </h2>
            <p class="text-muted">Create a new event type with style and ease ✨</p>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <!-- Event Type Name -->
            <div class="form-group mb-4">
                <label class="form-label fw-semibold">Event Type Name</label>
                <div class="input-group">
                    <span class="input-group-text icon-gradient"><i class="bi bi-card-text"></i></span>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Enter event type name" })
                </div>
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger small" })
            </div>

            <!-- Price -->
            <div class="form-group mb-4">
                <label class="form-label fw-semibold">Price</label>
                <div class="input-group">
                    <span class="input-group-text icon-gradient"><i class="bi bi-cash-stack"></i></span>
                    @Html.TextBoxFor(m => m.Price, new { @class = "form-control", placeholder = "Enter price", type = "number", step = "0.01", min = "0" })
                </div>
                @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger small" })
            </div>

            <!-- Active Status -->
            <div class="form-group mb-4 d-flex align-items-center justify-content-between">
                <label class="fw-semibold mb-0">Active Status</label>
                <div class="form-check form-switch">
                    @Html.CheckBox("IsActive", Model.IsActive ?? true, new { @class = "form-check-input", id = "IsActive" })
                    <label class="form-check-label" for="IsActive">Active</label>
                </div>
            </div>

            <!-- Buttons -->
            <div class="text-end mt-5 d-flex justify-content-end">
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-glass px-4" })
                <button type="submit" class="btn btn-glow px-4 ms-2">
                    <i class="bi bi-save"></i> Save
                </button>
            </div>
        }
    </div>
</div>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        /* ==== Base ==== */
        body {
            background: linear-gradient(120deg, #e0e7ff, #f5f3ff, #f0f9ff);
            background-size: 300% 300%;
            animation: bgShift 12s ease infinite;
            font-family: 'Poppins', 'Segoe UI', sans-serif;
            color: #1e293b;
        }

        @@keyframes bgShift {
            0% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0% 50%;
            }
        }

        /* ==== Wrapper ==== */
        .package-edit-wrapper {
            display: flex;
            justify-content: center;
            align-items: flex-start;
        }

        /* ==== Card ==== */
        .package-edit-card {
            width: 100%;
            max-width: 750px;
            background: #ffffff;
            border-radius: 20px;
            border: none;
            position: relative;
            overflow: hidden;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05), inset 2px 2px 6px rgba(255, 255, 255, 0.6), inset -2px -2px 8px rgba(0, 0, 0, 0.05);
            animation: fadeIn 0.8s ease;
        }

            .package-edit-card::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 6px;
                background: linear-gradient(90deg, #4b6cb7, #43cea2, #4b6cb7);
                animation: gradientFlow 6s linear infinite;
            }

        @@keyframes gradientFlow {
            0% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0% 50%;
            }
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(15px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* ==== Title ==== */
        .text-gradient {
            background: linear-gradient(90deg, #185a9d, #43cea2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        /* ==== Form ==== */
        .form-label {
            color: #374151;
            font-weight: 600;
        }

        .form-control {
            background: #f8fafc;
            border: 1.5px solid #e2e8f0;
            border-radius: 0 10px 10px 0;
            color: #1e293b;
            box-shadow: inset 2px 2px 4px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: #4b6cb7;
                box-shadow: 0 0 0 3px rgba(75, 108, 183, 0.25);
            }

        .input-group-text {
            background: #f8fafc;
            border: 1.5px solid #e2e8f0;
            border-radius: 10px 0 0 10px;
        }

        /* Gradient icons like Add Package Item */
        .icon-gradient i {
            background: linear-gradient(90deg, #43cea2, #185a9d);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-size: 1.1rem;
        }

        /* ==== Buttons ==== */
        .btn {
            font-weight: 600;
            border-radius: 10px;
            transition: all 0.3s ease;
            border: none !important;
            --bs-btn-border-width: 0 !important;
        }

        .btn-glass {
            background: rgba(255, 255, 255, 0.3);
            color: #334155;
            backdrop-filter: blur(10px);
            border: none !important;
        }

            .btn-glass:hover {
                background: rgba(75, 108, 183, 0.15);
                color: #1e293b;
            }

        .btn-glow {
            background: linear-gradient(90deg, #43cea2, #185a9d);
            color: #fff;
            box-shadow: 0 4px 12px rgba(24, 90, 157, 0.3);
            margin-left: 0.75rem;
            border: none !important;
        }

            .btn-glow:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(24, 90, 157, 0.4);
            }

        .btn:focus,
        .btn:active {
            outline: none !important;
            box-shadow: none !important;
            border: none !important;
        }

        /* ==== Switch ==== */
        .form-check-input:checked {
            background-color: #43cea2;
            border-color: #43cea2;
        }

        /* ==== Validation ==== */
        .text-danger {
            color: #dc2626;
            font-size: 0.85rem;
        }

        /* ==== Responsive ==== */
        @@media (max-width: 768px) {
            .package-edit-card {
                padding: 2rem;
            }
        }
    </style>
}
