@model MrGroom_KY_SL.Models.PackageItem

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Package Item Details";
}

<style>
    /* ===== Modern Detail Page Styles ===== */
    .package-header {
        background: linear-gradient(135deg, #0ea5e9, #6366f1);
        color: #fff;
        border-radius: 1rem;
        padding: 2.5rem 2rem;
        box-shadow: 0 10px 25px rgba(99, 102, 241, 0.25);
    }

        .package-header h2 {
            font-weight: 700;
            font-size: 2rem;
        }

    .package-meta {
        color: #e0e0e0;
        font-size: 1rem;
        margin-top: 0.5rem;
    }

    .section-title {
        font-weight: 600;
        font-size: 1.25rem;
        color: #333;
        border-left: 5px solid #0ea5e9;
        padding-left: 10px;
        margin-bottom: 1rem;
    }

    .card-modern {
        border: none;
        border-radius: 1rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        background-color: #fff;
    }

        .card-modern:hover {
            transform: translateY(-4px);
            box-shadow: 0 6px 25px rgba(0, 0, 0, 0.12);
        }

    .list-group-item {
        border: none;
        border-bottom: 1px solid #f1f1f1;
        padding: 0.9rem 1rem;
        font-size: 1rem;
    }

    .btn-gradient {
        background: linear-gradient(135deg, #0ea5e9, #6366f1);
        color: #fff;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-gradient:hover {
            background: linear-gradient(135deg, #38bdf8, #818cf8);
            color: #fff;
            transform: translateY(-2px);
        }

    .divider {
        border-bottom: 2px dashed #ddd;
        margin: 2rem 0;
    }

    .no-data {
        background: #f9fafb;
        border-radius: 0.75rem;
        padding: 1.5rem;
        text-align: center;
        color: #666;
        font-style: italic;
    }

    .package-list-item {
        padding: 0.5rem 0;
        border-bottom: 1px solid #f1f1f1;
    }

        .package-list-item:last-child {
            border-bottom: none;
        }
</style>

<div class="container py-5">
    <!-- Header Card -->
    <div class="package-header mb-5 d-flex justify-content-between align-items-center flex-wrap">
        <div>
            <h2><i class="bi bi-box-seam me-2"></i> @Model.Name</h2>
            <div class="package-meta">
                <strong>Price:</strong> @Model.Price.ToString("C") <br />
                <strong>Status</strong>
                @if (Model.IsActive == true)
                {
                    <span class="badge bg-success">Active</span>
                }
                else
                {
                    <span class="badge bg-danger">Inactive</span>
                }
            </div>
        </div>
        <a href="@Url.Action("Index", "AdminPackageItems")" class="btn btn-light rounded-pill px-4 mt-3 mt-md-0">
            <i class="bi bi-arrow-left-circle me-1"></i> Back to List
        </a>
    </div>

    <!-- Basic Information -->
    <div class="row g-4 mb-5">
        <div class="col-md-6">
            <div class="card-modern p-4 h-100">
                <h5 class="section-title"><i class="bi bi-info-circle-fill me-2"></i> Basic Information</h5>
                <dl class="row mb-0">
                    <dt class="col-sm-5 text-secondary">Package Item ID</dt>
                    <dd class="col-sm-7">@Model.PackageItemId</dd>

                    <dt class="col-sm-5 text-secondary">Name</dt>
                    <dd class="col-sm-7">@Model.Name</dd>

                    <dt class="col-sm-5 text-secondary">Price</dt>
                    <dd class="col-sm-7">@Model.Price.ToString("C")</dd>

                    <dt class="col-sm-5 text-secondary">Status</dt>
                    <dd class="col-sm-7">
                        @if (Model.IsActive == true)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>

        <!-- Description -->
        <div class="col-md-6">
            <div class="card-modern p-4 h-100">
                <h5 class="section-title"><i class="bi bi-card-text me-2"></i> Description</h5>
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <p class="text-muted">@Model.Description</p>
                }
                else
                {
                    <div class="no-data">No description available.</div>
                }
            </div>
        </div>
    </div>

    <div class="divider"></div>

    <!-- Linked Packages -->
    <h5 class="section-title"><i class="bi bi-boxes me-2"></i> Related Packages</h5>
    @if (Model.Packages != null && Model.Packages.Any())
    {
        <div class="row g-4">
            @foreach (var pkg in Model.Packages)
            {
                <div class="col-md-6">
                    <div class="card-modern p-4 h-100">
                        <h6 class="fw-bold text-secondary mb-2">
                            <i class="bi bi-archive-fill me-1"></i> @pkg.Name
                        </h6>
                        @if (!string.IsNullOrEmpty(pkg.Description))
                        {
                            <p class="text-muted">@pkg.Description</p>
                        }
                        <p><strong>Base Price:</strong> @pkg.BasePrice.ToString("C")</p>
                        @if (pkg.DurationHours != null)
                        {
                            <p><strong>Duration:</strong> @pkg.DurationHours hr(s)</p>
                        }
                        <p>
                            <strong>Status:</strong>
                            @if (pkg.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </p>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="no-data mt-4">
            <i class="bi bi-info-circle me-2"></i> This package item is not linked to any packages.
        </div>
    }

    <div class="text-center mt-5">
        <a href="@Url.Action("Index", "AdminPackageItems")" class="btn btn-gradient rounded-pill px-5 py-2">
            <i class="bi bi-arrow-left-circle me-2"></i> Back to List
        </a>
    </div>
</div>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
}
