@model MrGroom_KY_SL.Web.Models.EmailSenderViewModel
@{
    ViewBag.Title = "Send Packages by Email";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="package-edit-wrapper py-5">
    <div class="package-edit-card p-5 shadow-lg">
        <div class="text-center mb-5">
            <h2 class="fw-bold text-gradient">
                <i class="bi bi-envelope-paper-heart me-2"></i> Send Packages by Email
            </h2>
            <p class="text-muted">Deliver curated packages directly to your customers’ inbox ✨</p>
        </div>

        @using (Html.BeginForm("Send", "EmailSender", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <!-- SEND MODE -->
            <div class="form-group mb-4">
                <label class="form-label fw-semibold">Send Mode</label>
                <div class="d-flex gap-4 ms-1">
                    <label class="form-check-label">
                        @Html.RadioButtonFor(m => m.SendMode, MrGroom_KY_SL.Web.Models.EmailSendMode.SinglePackage, new { @class = "form-check-input me-2" })
                        Single Package
                    </label>

                    <label class="form-check-label">
                        @Html.RadioButtonFor(m => m.SendMode, MrGroom_KY_SL.Web.Models.EmailSendMode.AllPackages, new { @class = "form-check-input me-2" })
                        All Packages
                    </label>
                </div>
            </div>

            <!-- PACKAGE SELECT -->
            <div class="form-group mb-4" id="packageSelection"
                 @(Model.SendMode == MrGroom_KY_SL.Web.Models.EmailSendMode.AllPackages ? "style='display:none;'" : "")>

                <label class="form-label fw-semibold">Select Package</label>
                <div class="input-group">
                    <span class="input-group-text icon-gradient"><i class="bi bi-box-seam"></i></span>
                    @Html.DropDownListFor(
                        m => m.PackageId,
                        new SelectList(Model.Packages, "Value", "Text"),
                        "-- Select package --",
                        new { @class = "form-control" }
                    )
                </div>
            </div>

            <!-- CUSTOMER LIST -->
            <div class="form-group mb-4">
                <label class="form-label fw-semibold">Recipients</label>
                <div class="recipient-box">
                    @foreach (var cust in Model.Customers)
                    {
                        <div class="form-check">
                            <input type="checkbox" name="SelectedCustomerIds" value="@cust.Value" class="form-check-input" id="cust_@cust.Value" />
                            <label class="form-check-label" for="cust_@cust.Value">@cust.Text</label>
                        </div>
                    }
                </div>
            </div>

            <!-- SUBJECT -->
            <div class="form-group mb-4">
                <label class="form-label fw-semibold">Subject</label>
                <div class="input-group">
                    <span class="input-group-text icon-gradient"><i class="bi bi-chat-left-text"></i></span>
                    @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", placeholder = "Enter email subject" })
                </div>
            </div>

            <!-- MESSAGE -->
            <div class="form-group mb-4">
                <label class="form-label fw-semibold">Message (HTML allowed)</label>
                @Html.TextAreaFor(m => m.Message, 6, 80,
                new { @class = "form-control", placeholder = "Write your email message here..." })
            </div>

            <!-- BUTTONS -->
            <div class="text-end d-flex justify-content-end">
                <a href="/EmailSender/Index" class="btn btn-glass px-4">Cancel</a>
                <button type="submit" class="btn btn-glow px-4 ms-3">
                    <i class="bi bi-send-check"></i> Send Emails
                </button>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const radios = document.querySelectorAll('input[name="SendMode"]');
            const packageDiv = document.getElementById('packageSelection');

            radios.forEach(r => {
                r.addEventListener('change', function () {
                    packageDiv.style.display = (this.value === 'AllPackages') ? 'none' : '';
                });
            });
        });
    </script>
}


@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(120deg, #e0e7ff, #f5f3ff, #f0f9ff);
            background-size: 300% 300%;
            animation: bgShift 12s ease infinite;
            font-family: 'Poppins', 'Segoe UI', sans-serif;
        }

        @@keyframes bgShift {
            0% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0% 50%;
            }
        }

        .package-edit-wrapper {
            display: flex;
            justify-content: center;
        }

        .package-edit-card {
            width: 100%;
            max-width: 750px;
            background: #ffffff;
            border-radius: 20px;
            animation: fadeIn 0.6s ease;
            position: relative;
            overflow: hidden;
            box-shadow: 0px 8px 25px rgba(0,0,0,0.1);
        }

            .package-edit-card::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                height: 6px;
                width: 100%;
                background: linear-gradient(90deg, #4b6cb7, #43cea2, #4b6cb7);
                animation: gradientFlow 5s linear infinite;
            }

        @@keyframes gradientFlow {
            0% {
                background-position: 0%;
            }

            100% {
                background-position: 100%;
            }
        }

        .recipient-box {
            max-height: 280px;
            overflow-y: auto;
            padding: 12px;
            border: 1px solid #e2e8f0;
            border-radius: 12px;
            background: #f8fafc;
        }

        .icon-gradient i {
            background: linear-gradient(90deg, #43cea2, #185a9d);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .btn-glass {
            background: rgba(255,255,255,0.3);
            backdrop-filter: blur(8px);
            border: none;
        }

        .btn-glow {
            background: linear-gradient(90deg, #43cea2, #185a9d);
            color: #fff;
            border: none;
        }
    </style>
}
